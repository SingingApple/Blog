<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <% posts.forEach(post => { %> <%= post.title %> <% console.log(post._id)%>
    <a href="/posts/<%=post._id%>">Open</a>
    <% }) %>
